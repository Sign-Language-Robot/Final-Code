<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Use_SLR_Web_Application</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Use_SLR_Web_Application.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="how-to-use-div">
            How To Use Sign Language Robot
        </div>
        <style>
            .how-to-use-div {
                background-color: #333;
                color: #fff;
                font-size: 18px;
                padding: 10px 20px;
                text-transform: uppercase;
                letter-spacing: 2px;
                box-shadow: 0px 2px 2px rgba(0,0,0,0.3);
                transition: all 0.3s ease;
                margin: 5px;
                border-radius: 15px;
            }

                .how-to-use-div:hover {
                    background-color: #444;
                    box-shadow: 0px 4px 4px rgba(0,0,0,0.3);
                    transform: translateY(-2px);
                }

        </style>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Sign Language Robot
        </div>
    </footer>

    <style>
        footer {
            background-color: black;
            color: white;
            font-size: 14px;
            text-align: center;
            padding: 20px 0;
            box-shadow: 0px -2px 2px rgba(0,0,0,0.1);
            position: fixed;
            bottom: 0;
            left: 0;
            border-radius: 18px;
            margin: 25px;
            transition: all 1s ease-in-out;
        }

        footer:hover
        {
                background-color: #444;
                box-shadow: 0px 4px 10px rgba(0,0,0,0.3);
                transform: translateY(-2px);
                transition: all 1s ease-in-out;
                background-color: white;
                color: black;   
        }

            footer a {
                color: #fff;
                text-decoration: none;
                transition: color 0.2s ease;
            }

                footer a:hover {
                    color: #aaa;
                }

    </style>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>